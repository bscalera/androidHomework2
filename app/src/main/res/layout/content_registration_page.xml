<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registration_page"
    tools:context="com.example.m_alrajab.u4_storingdata_demo.RegistrationPage"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/new_background">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:id="@+id/Reg_UserName"
        android:hint="Enter a username"
        android:inputType="text"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:id="@+id/Reg_SName"
        android:hint="Enter your name"
        android:inputType="text"/>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <!--
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:id="@+id/Reg_SMajor"
        android:hint="Enter your major"
        android:inputType="text"/>
        -->
    <Spinner
        android:id="@+id/majorSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your major"
        android:prompt="@string/majorSpinnerDefaultValue"
        android:entries="@array/majors_array" />
    <!--
    android:prompt should be able to set a title for the spinner
    http://stackoverflow.com/questions/6071026/how-to-add-title-in-spinner-in-android

    http://developer.android.com/guide/topics/ui/controls/spinner.html
    https://www.youtube.com/watch?v=NoSri0OSOaA
    -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:id="@+id/Reg_Email"
        android:hint="Enter your MSU email"
        android:inputType="textEmailAddress"/>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:id="@+id/Reg_pass1"
        android:hint="Enter your password"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:id="@+id/Reg_pass2"
        android:hint="Confirm  password"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0sp"
        android:id="@+id/Reg_dateOfBirth"
        android:hint="Date of birth"
        android:focusable="false"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Reg"
        android:text="Register"
        android:backgroundTint="#0FFF"/>

</LinearLayout>
